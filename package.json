{
	"name": "hospital-management-system",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"production": "node -r dotenv/config server.js ",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db:gen": "npx drizzle-kit generate ",
		"db:push": "npx drizzle-kit push ",
		"db:mig": "tsx src/lib/server/db/migrate.ts ",
		"db:seed": "tsx src/lib/server/db/seed.ts ",
		"db:drop": "tsx src/lib/server/db/drop.ts && tsx src/lib/server/db/create.ts",
		"db:create": "tsx src/lib/server/db/create.ts "

	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/enhanced-img": "^0.3.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"@types/express": "^4.17.21",
		"@types/node": "^22.5.4",
		"@types/qrcode": "^1.5.5",
		"drizzle-kit": "^0.24.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"tsx": "^4.18.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@node-rs/argon2": "^1.8.3",
		"@typescript-eslint/eslint-plugin": "^8.5.0",
		"@typescript-eslint/parser": "^8.5.0",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.33.0",
		"eslint-plugin-drizzle": "^0.2.3",
		"express": "^5.0.0",
		"html2pdf.js": "^0.10.2",
		"lucia": "^3.2.0",
		"mysql2": "^3.11.0",
		"qrcode": "^1.5.3",
		"quill": "^2.0.2",
		"redis": "^4.7.0",
		"sharp": "^0.33.4",
		"suneditor": "^2.47.0",
		"vite-imagetools": "^7.0.4"
	},
	"type": "module"
}
