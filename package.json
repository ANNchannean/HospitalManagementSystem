{
	"name": "hospital-management-system",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"db:generate": "drizzle-kit generate ",
		"db:push": "drizzle-kit push ",
		"db:migrate": "pnpm vite-node src/lib/server/migrate.ts ",
		"db:seed": "pnpm vite-node src/lib/server/seed.ts ",
		"db:drop": "pnpm vite-node src/lib/server/drop.ts && pnpm db:create",
		"db:create": "pnpm vite-node src/lib/server/create.ts "
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/enhanced-img": "^0.2.0",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.11",
		"@types/nprogress": "^0.2.3",
		"@types/qrcode": "^1.5.5",
		"drizzle-kit": "^0.22.8",
		"pagedjs": "^0.4.3",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.18",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-node": "^1.6.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@node-rs/argon2": "^1.8.3",
		"@sveltekit-i18n/base": "^1.3.7",
		"@sveltekit-i18n/parser-icu": "^1.0.8",
		"@typescript-eslint/eslint-plugin": "^7.17.0",
		"@typescript-eslint/parser": "^7.17.0",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.31.2",
		"eslint-plugin-drizzle": "^0.2.3",
		"express": "^4.18.2",
		"lucia": "^3.2.0",
		"mysql2": "^3.9.7",
		"nprogress": "^0.2.0",
		"qrcode": "^1.5.3",
		"sharp": "^0.33.4",
		"vite-imagetools": "^7.0.2"
	},
	"type": "module"
}
